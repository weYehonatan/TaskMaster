<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginTop="30dp"
    android:gravity="center">

    <LinearLayout
    android:backgroundTint="#FFFFFF"
    android:background="@drawable/rounded_corner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <CheckBox
        android:id="@+id/checkBox_IsFinish"
        android:layout_width="28dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="163dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="task title"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvCategory"
            app:layout_constraintStart_toEndOf="@+id/checkBox_IsFinish"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCategoryRecycle"
            android:layout_width="163dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:text="task category"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBox_IsFinish"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvLate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FF0000"
        android:text="Late"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="302dp" />


</LinearLayout>


        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:padding="50dp"
            android:background="?android:attr/listDivider"
            />


</LinearLayout>












</androidx.constraintlayout.widget.ConstraintLayout>