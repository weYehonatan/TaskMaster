<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/login_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvSetting_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textColor="@color/white"
            android:textSize="80sp"
            />


        <TextView
            android:id="@+id/tvAddCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="add Category:"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            />
        <EditText
            android:id="@+id/etAddCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:padding="15dp"
            android:inputType="text"
            />
        <TextView
            android:id="@+id/tvRemoveCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Remove Category:"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            />
        <Spinner
            android:id="@+id/spinnerRemoveCategory"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tvRename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Change User Name:"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            />
        <EditText
            android:id="@+id/etRename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:padding="12dp"

            android:inputType="text"
            />
        <Button
            android:id="@+id/btnSaveNewCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="save"
            android:backgroundTint="@color/white"
            android:textColor="#000CFF"
            android:padding="18dp"
            android:layout_marginTop="64dp"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner"
             />

</LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>